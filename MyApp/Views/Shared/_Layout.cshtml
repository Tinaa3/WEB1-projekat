@using MyApp.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="~/Home/Index">Home</a></li>
                    @if (Session["user"] == null)
                    {
                        <li class="nav-item"><a class="nav-link" href="~/Home/Register">Registracija</a></li>
                        <li class="nav-item"><a class="nav-link active" href="~/Home/Login">Login</a></li>
                    }
                    else
                    {
                        User user = (User)Session["user"];
                        if (user.Role == Role.VISITOR)
                        {
                            <li class="nav-item"><a class="nav-link active" href="~/Visitor/Index">Istorija treninga</a></li>
                        }
                        else if (user.Role == Role.TRAINER)
                        {
                            <li class="nav-item"><a class="nav-link" href="~/Trainer/History">Istorija</a></li>
                            <li class="nav-item"><a class="nav-link active" href="~/Trainer/Index">Treninzi</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link active" href="~/Owner/Index">Fitnes centri</a></li>
                            <li class="nav-item"><a class="nav-link " href="~/Owner/Trainers">Treneri</a></li>
                            <li class="nav-item"><a class="nav-link " href="~/Owner/Comments">Komentari</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="~/Auth/Index">Izmeni profil</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Auth/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

        <div class="container body-content">
            @RenderBody()
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>